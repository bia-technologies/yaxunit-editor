{
  "name": "yaxunit-editor",
  "version": "0.1.2",
  "description": "Редактор тестов YAxUnit для 1C:Предприятие",
  "repository": "https://github.com/bia-technologies/yaxunit-editor",
  "type": "module",
  "license": "Apache-2.0",
  "keywords": [
    "yaxunit",
    "monaco",
    "tree-sitter",
    "1C:Enterprise",
    "bsl"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "npx vitest",
    "postinstall": "cp node_modules/web-tree-sitter/tree-sitter.wasm assets;cp node_modules/tree-sitter-bsl/tree-sitter-bsl.wasm assets;sed -i -e 's/0n/0/g' node_modules/web-tree-sitter/tree-sitter.js"
  },
  "devDependencies": {
    "jsdom": "^26.0.0",
    "path": "^0.12.7",
    "resize-observer-polyfill": "^1.5.1",
    "terser": "^5.37.0",
    "tree-sitter-bsl": "^0.1.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.9",
    "vite-plugin-singlefile": "^2.1.0",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@ungap/global-this": "^0.4.4",
    "monaco-editor-core": "^0.43",
    "performance-polyfill": "^0.0.3",
    "queue-microtask": "^1.2.3",
    "tslib": "^2.8.1",
    "web-tree-sitter": "^0.25.1"
  }
